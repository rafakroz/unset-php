Criar database: blog

CREATE TABLE `blog`.`posts` (
	`id` INT NOT NULL AUTO_INCREMENT , 
	`title` VARCHAR(255) NOT NULL , 
	`text` TEXT NULL , 
	`status` INT NOT NULL DEFAULT '0' , 
	PRIMARY KEY (`id`)) ENGINE = InnoDB;
	
